@model marknote.Models.NoteModel

@{
    ViewData["Title"] = Model.Title;
}

<h2>Search</h2>

<form method="GET" action="/search">
    <input type="text" name="query" placeholder="Query" />
    <input type="submit" />
</form>

@if (@Model.Recent != null)
{
    <h2>Recent</h2>
    <ul>
        @foreach (var item in @Model.Recent)
        {
            <li><a href="@item.Url">@item.Name</a> - @item.Path - @item.LastModified</li>
        }
    </ul>
    <hr/>
}

<div><span>Path: @Model.FullPath</span></div>

@if (Model.NoteHtml != null)
{
    @Html.Raw(Model.NoteHtml)
}

@if (Model.NoteText != null)
{
    <pre>
        @Model.NoteText
    </pre>
}
