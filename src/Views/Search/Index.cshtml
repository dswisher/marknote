@model marknote.Models.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<form method="GET" action="/search">
    <input type="text" name="query" placeholder="Query" value="@Model.Query" />
    <input type="submit" />
</form>


<h2>Results</h2>

<div><span>@Model.Results.Count hits</span></div>

<ul>
    @foreach (var item in Model.Results)
    {
        <li><a href="@item.Url">@item.Name</a></li>
    }
</ul>
